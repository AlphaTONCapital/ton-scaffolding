# ============================================
# BLUEPRINT SCAFFOLD DAPP ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values

# -----------------------------
# APPLICATION CONFIGURATION
# -----------------------------

# Public URL for the deployed application
# Used for GitHub Pages or other static hosting services
# Example for GitHub Pages: https://yourusername.github.io/your-repo-name
# Leave empty for local development
VITE_PUBLIC_URL=https://example.github.io/my-ton-dapp

# Application title displayed in the UI
# This will be shown in the header/title of your dapp
VITE_REACT_APP_TITLE=My TON Smart Contract DApp

# -----------------------------
# NETWORK CONFIGURATION
# -----------------------------

# TON Network to connect to
# Options: mainnet, testnet
# Default: testnet (if not specified)
VITE_NETWORK=testnet

# Custom RPC endpoint (optional)
# Leave empty to use default public endpoints
# Example: https://toncenter.com/api/v2/jsonRPC
VITE_TON_RPC_ENDPOINT=

# -----------------------------
# CONTRACT CONFIGURATION
# -----------------------------

# Your deployed contract address (optional)
# Format: 0:abc123... or EQ... format
# Leave empty if deploying new contracts
VITE_CONTRACT_ADDRESS=

# Contract deploy wallet seed phrase (optional)
# WARNING: Never commit this to version control!
# Used for automated deployments
# Format: word1 word2 word3 ... (24 words)
VITE_DEPLOY_WALLET_MNEMONIC=

# -----------------------------
# API KEYS (Optional)
# -----------------------------

# TON Center API key for mainnet operations
# Get one at: https://toncenter.com/
VITE_TONCENTER_API_KEY=

# TON API key for enhanced functionality
# Get one at: https://tonapi.io/
VITE_TONAPI_KEY=

# -----------------------------
# DEVELOPMENT SETTINGS
# -----------------------------

# Enable debug mode
# Shows additional logging and development tools
# Options: true, false
VITE_DEBUG_MODE=false

# Hot reload enabled
# Auto-refresh on code changes
# Options: true, false  
VITE_HOT_RELOAD=true

# -----------------------------
# UI CUSTOMIZATION
# -----------------------------

# Theme mode
# Options: light, dark, auto
VITE_THEME_MODE=auto

# Primary color for UI components
# Hex color code
VITE_PRIMARY_COLOR=#007AFF

# Show testnet banner
# Display a warning banner when on testnet
# Options: true, false
VITE_SHOW_TESTNET_BANNER=true

# -----------------------------
# WALLET CONFIGURATION
# -----------------------------

# Default wallet provider
# Options: tonconnect, tonkeeper, tonhub
VITE_WALLET_PROVIDER=tonconnect

# TON Connect manifest URL (required for TON Connect)
# Should point to your tonconnect-manifest.json
VITE_TONCONNECT_MANIFEST_URL=https://example.com/tonconnect-manifest.json

# -----------------------------
# ANALYTICS (Optional)
# -----------------------------

# Google Analytics tracking ID
# Format: G-XXXXXXXXXX
VITE_GA_TRACKING_ID=

# Mixpanel project token
VITE_MIXPANEL_TOKEN=

# -----------------------------
# TELEGRAM BOT CONFIGURATION
# -----------------------------

# Telegram Bot Token (REQUIRED for bot functionality)
# Get from @BotFather on Telegram
# Format: 123456789:ABCdefGHIjklmNOPqrstUVwxyz
# IMPORTANT: Keep this secret! Never commit with actual token!
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_FROM_BOTFATHER

# Telegram Bot Username
# Your bot's username without @
# Example: ton_hackathon_bot
TELEGRAM_BOT_USERNAME=your_bot_username

# -----------------------------
# TELEGRAM MINI APP CONFIGURATION
# -----------------------------

# Telegram Bot Token (required for Mini Apps)
# Get from @BotFather on Telegram
VITE_TELEGRAM_BOT_TOKEN=

# Telegram Bot Username
# Your bot's username without @
VITE_TELEGRAM_BOT_USERNAME=

# Telegram Web App URL
# The URL where your Mini App is hosted
VITE_TELEGRAM_WEB_APP_URL=https://your-webapp-url.com

# Validate Telegram Init Data
# Security feature to verify requests from Telegram
# Options: true, false
VITE_TELEGRAM_VALIDATE_INIT_DATA=true

# Telegram Analytics Token
VITE_TELEGRAM_ANALYTICS_TOKEN=

# -----------------------------
# TELEGRAM MINI APP FEATURES
# -----------------------------

# Enable Telegram Biometric Authentication
# Options: true, false
VITE_TELEGRAM_ENABLE_BIOMETRICS=true

# Enable Telegram Haptic Feedback
# Options: true, false
VITE_TELEGRAM_ENABLE_HAPTIC=true

# Enable Telegram Cloud Storage
# Options: true, false
VITE_TELEGRAM_ENABLE_CLOUD_STORAGE=true

# Enable Telegram QR Scanner
# Options: true, false
VITE_TELEGRAM_ENABLE_QR_SCANNER=true

# Enable Telegram Share Features
# Options: true, false
VITE_TELEGRAM_ENABLE_SHARE=true

# Telegram Theme Mode
# Options: auto (follows Telegram theme), light, dark
VITE_TELEGRAM_THEME_MODE=auto

# -----------------------------
# FEATURE FLAGS
# -----------------------------

# Enable wallet connection
# Options: true, false
VITE_ENABLE_WALLET=true

# Enable contract deployment UI
# Options: true, false
VITE_ENABLE_DEPLOY=true

# Enable contract interaction UI
# Options: true, false  
VITE_ENABLE_INTERACT=true

# Enable transaction history
# Options: true, false
VITE_ENABLE_TX_HISTORY=false

# Enable Telegram Mini App Mode
# Options: true, false
VITE_ENABLE_TELEGRAM_MINI_APP=false

# -----------------------------
# BUILD CONFIGURATION
# -----------------------------

# GitHub Pages deployment flag
# Set to true when building for GitHub Pages
# This affects the base URL configuration
GH_PAGES=false

# Build output directory
# Default: dist
VITE_BUILD_OUTPUT_DIR=dist

# Source maps generation
# Options: true, false, inline, hidden
VITE_SOURCEMAP=false

# -----------------------------
# ADVANCED SETTINGS
# -----------------------------

# Transaction timeout in milliseconds
# Default: 60000 (60 seconds)
VITE_TX_TIMEOUT=60000

# Maximum gas amount for transactions
# In nanotons
VITE_MAX_GAS=100000000

# Polling interval for updates (milliseconds)
# Default: 5000 (5 seconds)
VITE_POLLING_INTERVAL=5000

# Cache TTL in seconds
# Default: 300 (5 minutes)
VITE_CACHE_TTL=300