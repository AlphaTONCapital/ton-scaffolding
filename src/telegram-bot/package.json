{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram Bot for TON DApp interaction",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node index.ts",
    "build": "tsc",
    "start": "node ../../dist/telegram-bot/index.js",
    "debug": "node --inspect -r ts-node/register index.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.ts\""
  },
  "keywords": [
    "telegram",
    "bot",
    "ton",
    "blockchain",
    "crypto"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "grammy": "^1.19.3",
    "@grammyjs/menu": "^1.2.1",
    "@grammyjs/conversations": "^1.2.0",
    "@grammyjs/session": "^1.0.0",
    "@grammyjs/storage-free": "^2.4.2",
    "@ton/ton": "^15.2.1",
    "@ton/core": "^0.60.1",
    "@ton/crypto": "^3.3.0",
    "@tonconnect/sdk": "^3.0.2",
    "@orbs-network/ton-access": "^2.3.3",
    "qrcode": "^1.5.3",
    "dotenv": "^16.3.1",
    "axios": "^1.6.5",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "ts",
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts"
    ],
    "exec": "ts-node"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.test.ts",
      "!**/*.spec.ts"
    ]
  }
}